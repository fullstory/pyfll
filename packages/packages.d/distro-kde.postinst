#!/bin/sh -e

say() {
	echo "I: $@..."
}

do_postinst() {
	if [ ! -x "$(which homectl)" ]; then
		say "Apending to kscreenlockerrc"
		cat <<EOF >> /etc/xdg/kscreenlockerrc
[Daemon]
Autolock=false
LockOnResume=false
EOF
	fi
}

case "${1}" in
	postinst)
		do_postinst
		;;
	*)
		echo "Usage: ${0} postinst"
		;;
esac

:
