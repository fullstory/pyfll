#!/bin/sh -e

say() {
	echo "I: $@..."
}

do_postinst() {
	if [ -x /usr/sbin/plymouth-set-default-theme ]; then
		if plymouth-set-default-theme --list | grep -q breeze; then
			say 'select plymouth theme: details.'
			plymouth-set-default-theme breeze
		else
			say 'select plymouth theme: details.'
			plymouth-set-default-theme details
		fi
	fi
}

case "${1}" in
	postinst)
		do_postinst
		;;
	*)
		echo "Usage: ${0} postinst"
		;;
esac

:
